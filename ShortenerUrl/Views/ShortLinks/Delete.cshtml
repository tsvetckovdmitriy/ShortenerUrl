@model ShortenerUrl.Models.ShortLinkItemViewModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Удаление ссылки</h1>

<h3>Вы уверены, что хотите удалить эту ссылку?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FullUrl)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FullUrl)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ShortUrl)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ShortUrl)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DataCreted)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataCreted)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CountClicks)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CountClicks)
        </dd>
    </dl>
    
